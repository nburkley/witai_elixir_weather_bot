{
  "name": "Elixir echo bot MBF",
  "description": "This is an echo bot created using Phoenix framework and Microsoft bot framework.",
  "repository": "https://github.com/zabirauf/echo_phoenix_microsoftbot",
  "keywords": [
    "elixir",
    "microsoft",
    "messenger",
    "bot",
    "facebook",
    "wit"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/HashNuke/heroku-buildpack-elixir.git"
    },
    {
      "url": "https://github.com/gjaldon/heroku-buildpack-phoenix-static.git"
    }
  ],
  "env": {
    "APP_ID": {
      "description": "The Microsoft bot app id",
      "value": "APP_ID"
    },
    "APP_SECRET": {
      "description": "The Microsoft bot app secret",
      "value": "APP_SECRET"
    },
    "WIT_ACCESS_TOKEN": {
        "description": "The Wit access token",
        "value": "WIT_ACCESS_TOKEN"
    },
    "OPEN_WEATHER_MAP_APP_ID": {
        "description": "The Open weather map App Id",
        "value": "OPEN_WEATHER_MAP_APP_ID"
    },
    "SECRET_KEY_BASE": {
      "generator": "secret"
    }
  }
}
